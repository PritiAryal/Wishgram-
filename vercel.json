{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "build": {
    "env": {
      "PHP_EXTENSIONS": "openssl"
    }
  },
  "buildCommand": "chmod +x api/vercel-build.sh && ./api/vercel-build.sh"
}